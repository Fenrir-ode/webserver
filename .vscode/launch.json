    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) toc tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/msys/tests/tocs/TocNekketsu.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/msys/tests/tocs/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Définir la version désassemblage sur Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) FenrirServerGui Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/msys/FenrirServerGui.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Définir la version désassemblage sur Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) FenrirServer Cli Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/msys/FenrirServer.exe",
            "args": [
                "-d",
                "d:/saturn/",
                "-p",
                "3000",
                "--verbose"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/msys/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "logging": {
                "engineLogging": true
            },
            "miDebuggerPath": "D:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Définir la version désassemblage sur Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "FenrirServer (verbose)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/FenrirServer",
            "args": [
                "-d",
                "/mnt/d/chd/",
                "--verbose",
                "-p",
                "50000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "handle SIGPIPE nostop noprint pass",
                    "description": "ignore SIGPIPE",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        },
        {
            "name": "FenrirServer (gui)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/FenrirServerGui",
            "args": [
                "-d",
                "/mnt/d/chd/",
                "--verbose",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "handle SIGPIPE nostop noprint pass",
                    "description": "ignore SIGPIPE",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        },
    ]
}