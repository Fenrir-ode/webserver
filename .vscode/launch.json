    "version": "0.2.0",
    "configurations": [
        {
            "name": "DBZ - FenrirServer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/FenrirServer",
            "args": [
                "/mnt/g/esp_saturn/fenrir_server/build/isos/Dragon Ball Z Shinbutouden (JP).cue"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "handle SIGPIPE nostop noprint pass",
                    "description": "ignore SIGPIPE",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        },
